{
    "name": "valentin/symfony-auth-starter",
    "description": "A modern authentication starter for Symfony apps — including social login — installable in minutes",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "authentication",
        "oauth2",
        "google",
        "login",
        "security",
        "social-auth",
        "starter-kit"
    ],
    "authors": [
        {
            "name": "Valentin",
            "email": "contact@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/security-bundle": "^6.4|^7.0",
        "symfony/console": "^6.4|^7.0",
        "symfony/mailer": "^6.4|^7.0",
        "symfony/twig-bundle": "^6.4|^7.0",
        "doctrine/orm": "^2.14|^3.0",
        "doctrine/doctrine-bundle": "^2.7",
        "knpuniversity/oauth2-client-bundle": "^2.15",
        "league/oauth2-google": "^4.0",
        "symfonycasts/verify-email-bundle": "^1.15",
        "symfonycasts/reset-password-bundle": "^1.18"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/phpunit-bridge": "^6.4|^7.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Valentin\\AuthStarter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Valentin\\AuthStarter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
